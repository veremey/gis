	.out
		//- include layout/header-inner.pug
		.layout
			section.section.mod_last
				h3.section__title Оформление заказа
					small В наличии в 127 аптеках

				//- include module/retrieval.pug
				.toggler.toggler-01.is_active(style="display: block")
					#mapPharmacy.mod_offsetTop.mod_last

					#popapPharmacy01
