						a(href="#", data-ppp="js-shemaProezda").popapPharmacy__link.js-ppp Схема проезда и режим работы
						.popapPharmacy__check
							label.check.mod_heart
								input(type="checkbox", name="")
								span(data-toggle-text="Убрать из моих аптек", data-start-text="В мои аптеки")  В мои аптеки

				.toggler.toggler-02
					.assortment.sdw.mod_offsetTop.pharmacy
						.assortment__header.mod_notch
							.assortment__content
								p.pharmacy__name Наименование  /  Адрес
								p.pharmacy__distance
									span.pharmacy__distance_title Расстояние
								p.pharmacy__time Режим работы
								p.pharmacy__price
									span.pharmacy__price_title Цена

						each tabl in assortment
							.assortment__box
								.assortment__item
									.assortment__content
										.assortment__wrap
											.assortment__content_top
												.pharmacy__name
													a(href="E_oformlenie_step_2.html").pharmacy__link #{tabl.item.link}
												.pharmacy__distance
													span.pharmacy__desc #{tabl.item.distance}
												.pharmacy__time
													span.pharmacy__desc #{tabl.item.time}
												.pharmacy__price
													span.pharmacy__price_desc #{tabl.item.price}
											.assortment__content_bottom
												p.pharmacy__adress #{tabl.item.adress}
												p.pharmacy__adress
													span.pharmacy__metro
														i.icon-metro-green
														| Достоевского
									.pharmacy__btns
										a(href="E_zakaz_oformlen.html").pharmacy__getSelf.js-detectUserData
